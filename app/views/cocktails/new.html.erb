<h1>New cocktail:</h1>

<div class="container" style="border-style: dotted;">

	<p>Please enter cocktail name:</p>

	<%= simple_form_for [@cocktail] do |f| %>
	  <%= f.input :name %>
	  <%= f.input :photo %>
	  <%= f.input :photo_cache, as: :hidden %>
	  <%= f.submit "add a cocktail", class: "btn btn-primary" %>
	<% end %>

</div>
